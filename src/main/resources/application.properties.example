#server.port=6161
#debug=true

# Actuator
management.endpoints.web.exposure.include=*
management.endpoint.health.show-details=always

# Logging
logging.file.name=logfile.log
#logging.level.root=warn
#logging.level.org.springframework=off
#logging.level.sun.rmi=off

spring.devtools.restart.quiet-period=650
spring.devtools.restart.poll-interval=1600

# Datasource
spring.datasource.url=jdbc:mysql://<your-db-host>:3306/jree16?useSSL=false&createDatabaseIfNotExist=true
spring.datasource.username=<username>
spring.datasource.password=<password>
spring.sql.init.mode=never

# Hibernate
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQL5InnoDBDialect
spring.jpa.hibernate.ddl-auto=create

#spring.jpa.show-sql=true

# Thymeleaf
spring.thymeleaf.prefix=classpath:/templates/
spring.thymeleaf.suffix=.html
spring.thymeleaf.cache=false
